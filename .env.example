# Zerodha Kite Connect API Credentials
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control

# Zerodha Login Credentials (for auto-login)
ZERODHA_USER_ID=your_user_id_here
ZERODHA_PASSWORD=your_password_here
ZERODHA_TOTP_KEY=your_totp_key_here
# Get these from https://developers.kite.trade/
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here

# Access token (generated daily via zerodha_manual_auth.py)
ZERODHA_ACCESS_TOKEN=your_access_token_here

# File Paths (Recommended - defaults to project directories)
ACCESS_TOKEN_FILE=./config/access_token.txt
INSTRUMENTS_FILE=./config/instruments.pkl

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# PostgreSQL Database Configuration (for historical data)
DB_NAME=trading_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Shoonya/Finvasia API Credentials (for free historical data)
SHOONYA_USER_ID=your_shoonya_user_id
SHOONYA_PASSWORD=your_shoonya_password
SHOONYA_TOTP_KEY=your_shoonya_totp_key
SHOONYA_VENDOR_CODE=your_vendor_code
SHOONYA_API_SECRET=your_api_secret
SHOONYA_IMEI=your_imei

# Trading Configuration (Optional - can override in scripts)
DEFAULT_LOTS=1
DEFAULT_INSTRUMENT=BANKNIFTY
DEFAULT_LOT_SIZE=15